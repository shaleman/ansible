#!/bin/bash

usage="$0 start"
if [ $# -ne 1 ]; then
    echo USAGE: $usage
    exit 1
fi

case $1 in
start)
    # fail on error
    set -e

    # install necessary iptables to let serf work
    echo setting up iptables for serf
    ( /sbin/iptables -L INPUT | grep 'serf discovery sport' || \
        /sbin/iptables -I INPUT 1 -p udp --sport 5353 -i {{ serf_discovery_interface }}  \
        -j ACCEPT -m comment --comment "serf discovery sport" )
    ( /sbin/iptables -L INPUT | grep 'serf discovery dport' || \
        /sbin/iptables -I INPUT 1 -p udp --dport 5353 -i {{ serf_discovery_interface }}  \
        -j ACCEPT -m comment --comment "serf discovery dport" )
    ( /sbin/iptables -L INPUT | grep 'serf control' || \
        /sbin/iptables -I INPUT 1 -p tcp --dport 7946 -i {{ serf_discovery_interface }}  \
        -j ACCEPT -m comment --comment "serf control" )

    echo starting serf
    label=$(hostname)
    serial=$(lshw -c system | grep serial | awk '{print $2}')
    addr=$(ip addr list dev {{ serf_discovery_interface }} | \
            grep inet | grep {{ serf_discovery_interface }} | \
            awk '{split ($2, a , "/"); print a[1]}')
    if [[ "$addr" == "" ]]; then
        echo {{ serf_discovery_interface }} is not assigned a valid addr: ***$addr***
        exit 1
    fi

    # start serf
    serf agent -discover mycluster -iface eth1 \
        -tag NodeLabel=$label \
        -tag NodeSerial=$serial \
        -tag NodeAddr=$addr
    ;;

*)
    echo USAGE: $usage
    exit 1
    ;;
esac
